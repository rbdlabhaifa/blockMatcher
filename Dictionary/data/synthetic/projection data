camera_position = np.array([0, 0, 0], np.float32)
fov_x, fov_y = 60, 60
w, h = 1000, 1000
cx, cy = w / 2, h / 2
fx, fy = w / (2 * np.tan(np.deg2rad(fov_x))), h / (2 * np.tan(np.deg2rad(fov_y)))
camera_matrix = np.array([
    [fx, 0, cx],
    [0, fy, cy],
    [0, 0, 1]
], np.float64)



rotation_matrix = np.array([
    [1, 0, 0],
    [0, cos, -sin],
    [0, sin, cos]
])